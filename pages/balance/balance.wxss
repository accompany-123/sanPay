/* pages/balance/balance.wxss */
view {
  font-size: 32rpx;
}
.account-balance {
  width: 100%;
  height: 300rpx;
  background: linear-gradient(to bottom, #f1b746, #fbe6b7);
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
}
.account-balance image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.account-balance .monkey {
  color: red;
  font-size: 70rpx;
}
.account-balance .detailed {
  margin-top: 90rpx;
  margin-left: 50rpx;
  border: 2rpx solid #f1b746;
  font-size: 30rpx;
}
.recharge view:first-of-type {
  width: 100%;
}
.recharge {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recharge .recharge-box {
  width: 48%;
  height: 120rpx;
  background-color: #fefeee;
  margin: 20rpx 0;
  text-align: center;
}
.recharge .confirm {
  width: 80%;
  background-color: #f5ba47;
  color: #fff;
  height: 80rpx;
  margin: 20rpx auto;
  text-align: center;
  line-height: 80rpx;
}
.recharge .active {
  background-color: red;
  color: #fff;
}
.recharge .recharge-box .price {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}