/* pages/order/order.wxss */
.order {
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.order .card {
  width: 100%;
  height: 130rpx;
  background-color: #fff;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.order .content .cart-item {
  background-color: #fff;
  width: 100%;
  height: 160rpx;
  border-bottom: 1rpx solid #ccc;
  box-sizing: border-box;
  padding: 20rpx;
}


.content .cart-item view {
  height: 70rpx;
  font-size: 28rpx;
}

.content .cart-item .item-num {
  display: flex;
  justify-content: flex-end;
}

.content .cart-item .desc {
  display: flex;
  justify-content: space-between;
}

.order .footer {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  line-height: 120rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.footer .actual-payment {
  border-top: 1px solid #eee;

  width: 70%;
  color: rgb(173, 170, 170);
  padding-left: 20rpx;
}

.footer .actual-payment text {
  color: #c00;
}

.footer .confirm-payment {
  width: 30%;
  height: 100%;
  text-align: center;
  background-color: #ffa72b;
  color: #fff;
}