/* pages/personal/personal.wxss */
view {
  font-size: 34rpx;
}
.user view {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.user .give {
  background-color: red;
  color: #feaeae;
  border-radius: 10rpx;
  font-size: 30rpx;
  position: relative;
  bottom: 20rpx;
  padding: 5rpx;
  left: 10rpx;
}
.user view image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.user-information {
  display: flex;
  padding: 20rpx;
  align-items: center;
  box-sizing: border-box;
  background: linear-gradient(to bottom, #f1b746, #fbe6b7);
}
.user-information .image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}